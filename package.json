{
  "name": "nwjs-ts-react",
  "type": "module",
  "displayName": "NWJS React TS starter",
  "version": "1.0.0",
  "description": "Template for a NWJS project that compiles the source code to a binary file. It includes React, Rollup, Eslint, Typescript and pnpm.",
  "main": "app.js",
  "scripts": {
    "watch": "node --loader ts-node/esm ./build.ts && rollup -c -w",
    "start": "RUN_NWJS=true npm run watch",
    "build": "node --loader ts-node/esm ./build.ts && rollup -c",
    "run-nwjs": "node --loader ts-node/esm ./start.ts",
    "start-bin": "NODE_ENV=production npm start",
    "build-bin": "NODE_ENV=production node --loader ts-node/esm ./build.ts && rollup -c",
    "lint": "eslint src --fix"
  },
  "author": "David Mart√≠nez",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/wait-on": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-plugin-react": "^7.28.0",
    "http-server": "^14.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "wait-on": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidmartinez10/nwjs-ts-react.git"
  },
  "keywords": [
    "nwjs",
    "typescript",
    "react",
    "eslint",
    "rollup"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidmartinez10/nwjs-ts-react/issues"
  },
  "homepage": "https://github.com/davidmartinez10/nwjs-ts-react#readme"
}
