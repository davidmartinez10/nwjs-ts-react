{
  "name": "nwjs-ts-react",
  "type": "module",
  "displayName": "NWJS React TS starter",
  "version": "2.0.0",
  "description": "NWJS application template featuring compilation to a binary file for code protection. It includes React, Rollup, Typescript, Prettier, Eslint and Pnpm.",
  "main": "app.js",
  "scripts": {
    "build": "rollup -c",
    "clean": "npx rimraf ./build && npx rimraf ./dist",
    "debug": "cross-env DEBUG=true npm run start",
    "format": "npx prettier --write .",
    "lint": "npx eslint --ext .ts,.tsx src/ --fix",
    "package": "npm run clean && cross-env NODE_ENV=production npm run build && node --loader ts-node/esm ./package.ts",
    "postinstall": "node --loader ts-node/esm ./postinstall.ts",
    "run-nwjs": "cross-env DEBUG=true node --loader ts-node/esm ./start.ts",
    "start": "cross-env RUN_NWJS=true npm run watch",
    "watch": "rollup -c -w"
  },
  "author": "David Mart√≠nez",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/chrome": "^0.0.180",
    "@types/node": "^17.0.23",
    "@types/nw.js": "^0.13.14",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/wait-on": "^5.3.1",
    "@types/yauzl": "^2.9.2",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.4",
    "got": "^12.0.3",
    "nw": "0.55.0-sdk",
    "nwjs-ffmpeg-prebuilt": "^0.0.5",
    "prettier": "2.6.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^3.0.2",
    "rollup": "2.63.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-styles": "^4.0.0",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "wait-on": "^6.0.1",
    "yauzl": "^2.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidmartinez10/nwjs-ts-react.git"
  },
  "keywords": [
    "nwjs",
    "typescript",
    "react",
    "pnpm",
    "rollup",
    "hot-reload",
    "eslint",
    "prettier"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidmartinez10/nwjs-ts-react/issues"
  },
  "homepage": "https://github.com/davidmartinez10/nwjs-ts-react#readme"
}
